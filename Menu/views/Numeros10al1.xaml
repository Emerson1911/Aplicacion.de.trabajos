<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Menu.views.Numeros10al1"
             Title="Temporizador"
             BackgroundImageSource="holar.jpg">
   
    <StackLayout
        VerticalOptions="CenterAndExpand">
        <Label
            FontSize="40"
            x:Name="Timer"
            Text="0.000"
            TextColor="Coral"
            HorizontalTextAlignment="Center"/>

    <ImageButton
            x:Name="startsStopButton"
            Clicked="OnStarStop"
            Source="holaraiden.jpg"
            HeightRequest="50"
            WidthRequest="50"/>

    <ImageButton
            Clicked="OnReset"
            Source="holakiri.jpg"
            HeightRequest="50"
            WidthRequest="50"/>
    </StackLayout>

</ContentPage>