<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Menu.views.Sueldo"
             Title="Sueldo Semanal de un trabajador"
             BackgroundImageSource="hola1.jpg">
    <!---#----!>
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="Sueldo del trabajador"  FontFamily="" TextColor="White"/>
            <Entry Placeholder="Escriba el sueldo del trabajador" x:Name="ueldo"  FontFamily="" TextColor="White"/>
            <Label Text="Horas Trabajadas"  FontFamily="" TextColor="White"/>
            <Entry Placeholder="Escriba horas  trabajadas" x:Name="Horas"  FontFamily="" TextColor="White"/>
            <Label Text="Pago del trabajador"  FontFamily="" TextColor="White"/>
            <Entry Placeholder="Pago del trabajador" x:Name="Pago"  FontFamily="" TextColor="White"/>
            <Button Text="Calcular" x:Name="Calcular" Clicked="Calcular_Clicked" BackgroundColor="Coral" TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>